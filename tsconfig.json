/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "baseUrl": "./",
    "paths": {
      "@tasks-models/*": ["projects/task-manager/src/app/models/*"],
      "@tasks-components/*": ["projects/task-manager/src/app/components/*"],
      "@tasks-shared/*": ["projects/task-manager/src/app/shared/*"],
      "@tasks-services/*": ["projects/task-manager/src/app/services/*"],
      "@tasks-assets/*": ["projects/task-manager/src/assets/*"],
      "@invest-models/*": ["projects/investment-calculator/src/app/models/*"],
      "@invest-components/*": [
        "projects/investment-calculator/src/app/components/*"
      ],
      "@invest-shared/*": ["projects/investment-calculator/src/app/shared/*"],
      "@invest-services/*": [
        "projects/investment-calculator/src/app/services/*"
      ],
      "@invest-assets/*": ["projects/investment-calculator/src/assets/*"],
      "@dash-tr-models/*": ["projects/dashboard-traffic/src/app/models/*"],
      "@dash-tr-components/*": [
        "projects/dashboard-traffic/src/app/components/*"
      ],
      "@dash-tr-shared/*": ["projects/dashboard-traffic/src/app/shared/*"],
      "@dash-tr-services/*": ["projects/dashboard-traffic/src/app/services/*"],
      "@dash-tr-assets/*": ["projects/dashboard-traffic/src/assets/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
